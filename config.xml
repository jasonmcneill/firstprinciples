<?xml version='1.0' encoding='utf-8'?>
<widget id="org.usd21.firstprinciples" version="2.9.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>First Principles</name>
    <description>
        The elementary teachings, according to the scriptures of the Bible, about what it means to be a disciple of Jesus.
    </description>
    <author email="firstprinciples@usd21.org" href="http://usd21.org/m/">
        Kip McKean
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-navigation href="http://*usd21.org/m/*" />
    <allow-navigation href="https://*usd21.org/m/*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="fullscreen" value="true" />
    <icon src="icon.png" />
    <platform name="ios">
        <preference name="prerendered-icon" value="false">
        <config-file platform="ios" parent="UIViewControllerBasedStatusBarAppearance" mode="replace">
            <false/>
        </config-file>
    </platform>
    <plugin name="cordova-plugin-inappbrowser" spec="^1.7.1" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
    <!-- <plugin spec="https://github.com/litehelpers/Cordova-sqlite-storage.git#v2.0.4" /> -->
    <!-- <plugin spec="https://github.com/katzer/cordova-plugin-hidden-statusbar-overlay" /> -->
    <!-- <plugin spec="https://github.com/katzer/cordova-plugin-hidden-statusbar-overlay" /> -->
    <!-- <plugin name="de.appplant.cordova.plugin.hidden-statusbar-overlay" /> -->
</widget>
