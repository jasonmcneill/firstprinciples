<?xml version='1.0' encoding='utf-8'?>
<widget id="org.usd21.firstprinciples" version="2.9.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>First Principles</name>
    <description>
        The elementary teachings, according to the scriptures of the Bible, about what it means to be a disciple of Jesus.
    </description>
    <author email="firstprinciples@usd21.org" href="http://usd21.org/m/">
        Kip McKean
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-navigation href="http://*usd21.org/m/*" />
    <allow-navigation href="https://*usd21.org/m/*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="fullscreen" value="true" />
    <icon src="icon.png" />
    <platform name="ios">
        <preference name="prerendered-icon" value="false">
        <config-file platform="ios" parent="UIViewControllerBasedStatusBarAppearance" mode="replace">
            <false/>
        </config-file>
        <icon src="images/icons/rob20130621/57x57.png" width="57" height="57" />
        <icon src="images/icons/rob20130621/72x72.png" width="72" height="72" />
        <icon src="images/icons/rob20130621/114x114.png" width="114" height="114" />
        <icon src="images/icons/rob20130621/144x144.png" width="144" height="144" />
        <splash src="images/rob20130621/splash/320x480.png" width="320" height="480" />
        <splash src="images/rob20130621/splash/640x960.png" width="640" height="960" />
        <splash src="images/rob20130621/splash/640x1136.png" width="640" height="1136" />
        <splash src="images/rob20130621/splash/1024x768.png" width="1024" height="768" />
        <splash src="images/rob20130621/splash/768x1024.png" width="768" height="1024" />
        <splash src="images/rob20130621/splash/2048x1496.png" width="2048" height="1496" />
        <splash src="images/rob20130621/splash/1536x2008.png" width="1536" height="2008" />
    </platform>
    <platform name="android">
        <preference name="android-installLocation" value="auto" />
        <icon src="images/icons/rob20130621/36x36.png" width="36" height="36" />
        <icon src="images/icons/rob20130621/48x48.png" width="48" height="48" />
        <icon src="images/icons/rob20130621/72x72.png" width="72" height="72" />
        <icon src="images/icons/rob20130621/96x96.png" width="96" height="96" />
    </platform>
    <plugin name="cordova-plugin-inappbrowser" spec="^1.7.1" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
    <!-- <plugin spec="https://github.com/litehelpers/Cordova-sqlite-storage.git#v2.0.4" /> -->
    <!-- <plugin spec="https://github.com/katzer/cordova-plugin-hidden-statusbar-overlay" /> -->
    <!-- <plugin spec="https://github.com/katzer/cordova-plugin-hidden-statusbar-overlay" /> -->
    <!-- <plugin name="de.appplant.cordova.plugin.hidden-statusbar-overlay" /> -->
</widget>
